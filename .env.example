# Node Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/review_scraper
DATABASE_POOL_SIZE=10

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# API Configuration
PORT=3000
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3000

# Scraper Configuration
SCRAPER_THROTTLE_MS=500
SCRAPER_MAX_PAGES=10
SCRAPER_COUNTRIES=us,cn,jp,gb,kr,de,fr,ca,au,it,es,br,ru,in,mx

# Labeler Configuration
MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
BATCH_SIZE=32
MAX_LENGTH=512

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your-jwt-secret-key
API_RATE_LIMIT=100

# External APIs
OPENAI_API_KEY=your-openai-api-key