{
  "name": "@review-scraper/scraper",
  "version": "1.0.0",
  "description": "Review scraping service for extracting app reviews from various stores",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@review-scraper/shared": "workspace:*",
    "app-store-scraper": "^0.18.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  },
  "keywords": ["reviews", "scraping", "app-store", "data-extraction"],
  "author": "Review Scraper Team",
  "license": "MIT"
}
